{% extends 'base.html.twig' %}

{% block title %}Dashboard!{% endblock %}

{% block body %}


    <div class="example-wrapper">
        <h1>DASHBOARD</h1>
        <h2>Toys</h2>

        <a class="btn" href="{{ path('app_toy_new')}}">ADD NEW TOY</a>
        <table>
            <thead>
            <tr>
                <th>Title</th>
                <th>Picture</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
        {% for toy in toys %}
            <tr>
                <td>{{ toy.title }}</td>
                <td><img src="{{ vich_uploader_asset(toy) }}" alt="{{ toy.title }}"><td>
{#                <td><img src="{{ toy.picture }}" alt="{{ toy.title }}"></td>#}
                <td><a href="{{ path('app_toy_edit', {'id': toy.id}) }}">Edit</a></td>

                <td><form method="post" action="{{ path('app_toy_delete', {'id': toy.id}) }}"
                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ toy.id) }}">
                    <button class="btn">Delete</button>
                </form></td>
            </tr>
        {% endfor %}
            </tbody>
        </table>

        <h2>Brands</h2>
        <a class="btn" href="{{ path('app_brand_new')}}">ADD NEW BRAND</a>
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Picture</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for brand in brands %}
                <tr>
                    <td>{{ brand.name }}</td>
                    <td><img src="{{ vich_uploader_asset(brand) }}" alt="{{ brand.name }}"><td>
                        {#                <td><img src="{{ toy.picture }}" alt="{{ toy.title }}"></td>#}
                    <td><a href="{{ path('app_brand_edit', {'id': brand.id}) }}">Edit</a></td>

                    <td><form method="post" action="{{ path('app_brand_delete', {'id': brand.id}) }}"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ brand.id) }}">
                            <button class="btn">Delete</button>
                        </form></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
