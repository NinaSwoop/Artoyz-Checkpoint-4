{% extends 'base.html.twig' %}
{% block meta_description %}
	landing page, new figurine's arrivals
{% endblock %}

{% block title %}JUST IN
{% endblock %}

{% block body %}
	<main class="container m-auto">
		<div class="row">
			<h1 class="handing-title p-4">JUST IN</h1>
		</div>
		<div class="row d-flex m-auto flex-wrap justify-content-center">

			{% for toy in toys|slice(1, 4) %}

				<div class="col text-center">
					<div class="card shadow bg-body rounded m-auto mb-4" style="width: 18rem;">
						<a href="{{ path('app_show', {id: toy.id})}}"><img class="picture-toy card-img-top" src="{{ toy.picture }}" alt="{{ toy.title }}"></a>
						<div class="card-body">
							{%  if  is_granted ( 'IS_AUTHENTICATED_FULLY' )  %}
								<button id="isFavorite-{{toy.id}}" class="isfavoritebutton" data-toy-id="{{ toy.id }}" aria-label="button to add or remove toy's favorite" aria-pressed="{{ app.user.isInFavorite(toy) ? 'true' : 'false' }}">
									<i class="bi {{ app.user.isInFavorite(toy) ? " bi-balloon-heart-fill" : " bi-balloon-heart" }}"></i>
									<p class="buttonText">{{ app.user.isInFavorite(toy) ? 'Remove to favorite' : 'Add to favorite' }}</p>
								</button>
							{%  endif  %}
							<h2 class="toy-title">{{ toy.title }}</h2>
							<p class="toy-price">{{ toy.price|format_currency('USD', {rounding_mode: 'floor'}) }}</p>
							<div class="d-flex flex-column"></div>
						</div>
					</div>
				</div>

			{% endfor %}
		</div>
	</main>
{% endblock %}
