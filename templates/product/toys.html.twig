{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}


    <div class="example-wrapper">
        <h1>TOYS</h1>
        {% for toy in toys %}
            <img src="{{ toy.picture }}" alt="{{ toy.title }}">
            <h2>{{ toy.title }}</h2>
            <p>{{ toy.price|format_currency('USD', {rounding_mode: 'floor'}) }}</p>
        {% endfor %}
    </div>

{% endblock %}
