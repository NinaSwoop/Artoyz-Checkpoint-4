{% extends 'base.html.twig' %}

{% block title %}Hello ProductController!{% endblock %}

{% block body %}


    <div class="example-wrapper">
        <h1>{{ toy.title }}</h1>
        <img src="{{ toy.picture }}" alt="{{ toy.title }}">
        <h2>{{ toy.title }}</h2>
        <p>{{ toy.description }}</p>
        <p>{{ toy.price|format_currency('USD', {rounding_mode: 'floor'}) }}</p>
        <p>{{ toy.size }}-inch</p>
        <p>Limited to {{ toy.numbercopies|format_number(locale='US') }} made</p>
        <a href="{{ toy.linktopurchase }}">Link to purchase</a>
    </div>

{% endblock %}