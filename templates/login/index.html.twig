{% extends 'base.html.twig' %}

{% block body %}
<main class="container m-auto">

    <div class="row">
        <h1 class="handing-title p-4">ACCOUNT</h1>
    </div>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="row d-flex m-auto justify-content-center col-lg-4">
        <form class="d-flex justify-content-center flex-column" action="{{ path('app_login') }}" method="post">

            <div class="mt-3 text-center">
                <label class ="connexionLabel form-label" for="username">Email:</label>
                <input class ="connexionInput rounded form-control" type="text" id="username" name="_username" value="{{ last_username }}">
            </div>

            <div class="mt-5 text-center">
                <label class ="connexionLabel form-label" for="password">Password:</label>
                <input class ="connexionInput rounded form-control" type="password" id="password" name="_password">
            </div>

            <input type="hidden" name="_target_path" value="/login/redirect">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-dark p-3 col-4 m-5 mb-5">Sign in</button>
            </div>

        </form>
    </div>
</main>
{% endblock %}


